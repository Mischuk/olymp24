.m_footer
  background #0c2227
  .logo
    background: url('../images/sprite.png') no-repeat 0 -34px;
    width: 201px;
    height: 45px;
    position absolute
    left 0
    top 50%
    margin-top -(@height/2)
    @media screen and (max-width: 650px)
      position static
      margin-left auto
      margin-right auto
      margin-top 20px
    a
      display block
      width 100%
      height 100%
  .warning
    position relative
    padding-left 325px
    padding-top 20px
    padding-bottom 20px
    @media screen and (max-width: 650px)
      padding-left 0
    &:before
      content ""
      width 2px
      height 45px
      position absolute
      left 230px
      top 50%
      margin-top -(@height/2)
      background #556568
      @media screen and (max-width: 650px)
        display none
    &:after
      content ''
      background: url('../images/sprite.png') no-repeat -231px -134px;
      width: 51px;
      height: 51px;
      position absolute
      left 255px
      top 50%
      margin-top -(@height/2)
      @media screen and (max-width: 650px)
        display none
    .title
      bold()
      color $blue
      font-size 20px
      margin-bottom 5px
      @media screen and (max-width: 650px)
        font-size 16px
        text-align center
    p
      light()
      margin 0
      color #7f8587
      font-size 16px
      @media screen and (max-width: 650px)
        font-size 13px
        text-align center