.m_how
  background url("../images/bg-1.jpg") no-repeat 50% 50%
  background-size cover
  height: 582px;
  @media screen and (max-width: 1000px)
    height auto
    padding-bottom 50px
  .row
    padding-top 50px
    @media screen and (max-width: 1000px)
      padding-top 0
  .mejs-overlay-button
    background none
    width 60px
    height 60px
    margin-left -30px
    margin-top -30px
    overflow hidden
    &:after
      content ''
      background #fff url('../images/sprite.png') no-repeat 20px 18px;
      width 60px
      height 60px
      position absolute
      left 0
      top 0
      border-radius 50%
      overflow hidden
    &:hover
      width 220px
      transform translateX(-80px)
      background rgba(255,255,255,.35)
      border-radius 40px
      &:before
        content "СМОТРЕТЬ ВИДЕО"
        color #FFF
        line-height 60px
        padding-left 70px
        bold()
        font-size 14px
        text-shadow 1px 1px 1px rgba(0,0,0,.25)
  .mejs-overlay-loading
    display none !important
  .mejs-container
    border-radius 20px
    overflow hidden
    @media screen and (max-width: 550px)
      background none
      margin-left auto
      margin-right auto
      width 100% !important
      #my-video
        width 100% !important
        height 100% !important
        border-radius 10px
        overflow hidden
      .mejs-overlay-play
        width 100% !important
        height 100% !important
      .mejs-poster
        display none !important
