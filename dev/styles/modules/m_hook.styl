.m_hook
  background url("../images/bg-5.jpg") no-repeat 50% 50%
  background-size cover
  padding 50px 0
  box-shadow inset 0 5px 15px rgba(0,0,0,.25)
  .right
    padding-left 380px
    padding-right 100px
    @media screen and (max-width: 1000px)
      padding-left 0
      padding-right 0
  .large-title
    bold()
    color $blue
    font-size 30px
    text-shadow 1px 1px 0 rgba(0,0,0,.25)
    @media screen and (max-width: 1000px)
      text-align center
  .small-title
    light()
    color #fff
    font-size 18px
    margin-top 25px
    margin-bottom 55px
    @media screen and (max-width: 1000px)
      text-align center
      margin-bottom 30px
  .m_lead-form
    .row
      margin-bottom 0
    .form-label-inputs
      float none
      margin-bottom 15px
    .form-label-submit
      margin-left 0
      & + .row
        margin-top 5px
        margin-bottom 15px
      button
        width: 268px;
        height: 57px;
        &:after
          background: url('../images/buttons.png') no-repeat -8px -11px;
        &:before
          background-position -8px -80px
        &:active
          &:before
            background-position -8px -146px
    .tooltip
      background #2a454a
      &:after
        border-color #2a454a transparent transparent transparent;
