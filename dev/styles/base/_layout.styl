/*!=========================
      Base grid styles
==========================*/
html, body
  height 100%
body
  regular()
  font-size 16px
  line-height 1.2
  color #000
  background #fff
  font-family 'Ubuntu', sans-serif
.wrapper
  clearfix()
  position relative
  width 970px
  height 100%
  margin-left auto
  margin-right auto
  @media screen and (max-width: 1000px)
    width 94%
.row
  clearfix()
.mobile-cl
  display none
  @media screen and (max-width: 740px)
    display block
    width 100%
    height 1px
    background none
.mobile-hide
  @media screen and (max-width: 740px)
    display none