.m_guarantee
  background url("../images/pattern.png") 0 0
  padding-bottom 44px
  .headling
    color #fff
  .small-headling
    bebas()
    margin-bottom 50px
    font-size 36px
    color #fff
    text-align center
    margin-top -40px
    text-shadow 1px 1px 0px rgba(0,0,0,.5)
  .steps
    clearfix()
    .step-1, .step-2
      float left
      width 25%
      text-align center
      @media screen and (max-width: 740px)
        width 50%
        margin-bottom 20px
      @media screen and (max-width: 420px)
        width 100%
      .desc
        bold()
        font-size 16px
        color #fff
        text-shadow 1px 1px 0 rgba(0,0,0,.35)
        a
          color #fff
      .icon
        margin-left auto
        margin-right auto
    .step-1
      .icon
        background: url('../images/sprite.png') no-repeat -336px -6px;
        width: 91px;
        height: 91px;
        margin-bottom 15px
    .step-2
      .icon
        background: url('../images/sprite.png') no-repeat -336px -103px;
        width: 97px;
        height: 101px;
        margin-bottom 5px
    .step-3
      position relative
      float left
      width 44%
      background rgba(255,255,255,.25)
      color #fff
      border-radius 10px
      text-shadow 1px 1px 0 rgba(0,0,0,.25)
      padding 15px 10px
      font-size 16px
      text-align center
      border-left 1px solid rgba(255,255,255,.25)
      border-right 1px solid rgba(255,255,255,.25)
      box-shadow inset 0 2px 3px 1px rgba(255,255,255,.25), 1px 1px 2px 0 rgba(0,0,0,.25)
      @media screen and (max-width: 740px)
        width 100%
        margin-top 20px