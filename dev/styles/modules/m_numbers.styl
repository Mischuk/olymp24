.m_numbers
  position relative
  height 280px
  background url("../images/pattern.png") 0 0
  border-top 2px solid rgba(255,255,255,.5)
  padding-top 65px
  @media screen and (max-width: 740px)
    padding-top 50px
    padding-bottom 50px
    height auto
  .wrapper
    padding-left 5px
    padding-right 5px
  .col-1-of-3
    position relative
    float left
    width 33.333%
    color #fff
    text-align center
    @media screen and (max-width: 740px)
      float none
      width 100%
      margin-bottom 30px
      &:last-child
        margin-bottom 0
  .number
    text-align center
    font-size 100px
    line-height 100px
    display inline-block
    vertical-align middle
    margin-bottom 40px
    bebasbold()
    text-shadow 1px 1px 1px rgba(0,0,0, .45)
    position relative
    @media screen and (max-width: 1000px)
      margin-bottom 10px
    .small
      bold()
      position absolute
      left -40px
      bottom 15px
      font-size 25px
      line-height 25px
      text-align right
      font-family 'Ubuntu', sans-serif
  .desc
    bold()
    font-size 16px
