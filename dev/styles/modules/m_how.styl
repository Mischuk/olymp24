  .mejs-container .mejs-controls
    display none !important
  .video
    position relative
    float right
    width 481px
    height 324px
    background url("../images/video.png") no-repeat 0 0
    padding-top 10px
    padding-left 10px
    padding-right 10px
    margin-right 60px
    @media screen and (max-width: 1000px)
      float none
      margin-left auto
      margin-right auto
    @media screen and (max-width: 550px)
      width 100%
      background-size cover
      background none
      padding 0
      height auto
  .desc
    width 400px
    float left
    color $black
    @media screen and (max-width: 1000px)
      width 100%
      text-align center
      float none
    .title
      bold()
      font-size 30px
    p
      light()
      font-size 18px
