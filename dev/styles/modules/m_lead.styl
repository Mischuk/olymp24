.m_lead
  background #222
  height 750px
  margin 0 auto
  overflow hidden
  perspective 1200px
  @media screen and (max-width: 1024px)
    background url("../images/nosupport.jpg") no-repeat 50% 50%
    background-size cover
  @media screen and (max-width: 740px)
    height auto
    padding-bottom 50px
  &:before
    content ''
    position absolute
    top 0
    width 100%
    height 100%
    z-index 10
    background url("../images/lead-pattern-overlay.jpg") repeat 0 0
    opacity .3
    z-index 12
  &:after
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    z-index 10
    background rgba(11, 40, 50,.75)
    box-shadow inset -25px 20px 200px 60px rgba(0,0,0,.6)
  .wrap
    position absolute
    top -60%
    left -10%
    height 300%
    width 200%
    transform rotateX(20deg) rotateY(40deg) rotateZ(-20deg)
    z-index 5
    @media screen and (max-width: 1024px)
      display none !important
  .pattern
    background-size 500px
    position absolute
    top 0
    left 0
    height 100%
    width 400%
    animation scroll linear 80s infinite
    background-image url('../images/lead-pattern.png')
  .wrapper
    z-index 20
    padding-top 90px
  .small-headling
    light()
    color #fff
    font-size 28px
    line-height 40px
    text-align center
    margin-bottom 20px
    text-shadow 1px 1px 0 rgba(0,0,0,.75)
    @media screen and (max-width: 640px)
      font-size 21px
      line-height 1.2
      br
        display none
  .pluses
    clearfix()
    width 700px
    margin-left auto
    margin-right auto
    margin-top 30px
    margin-bottom 30px
    @media screen and (max-width: 740px)
      width 100%
      text-align center
    .demo, .standart
      light()
      position relative
      padding-left 70px
      color #fff
      font-size 16px
      width 50%
      float left
      @media screen and (max-width: 740px)
        float none
        display inline-block
        vertical-align middle
        width 330px
        text-align left
        margin-top 10px
        margin-bottom 10px
      @media screen and (max-width: 380px)
        width 280px
        font-size 13px
      &:before
        content ''
        width 2px
        height 32px
        background #55656c
        position absolute
        left 50px
        top 50%
        margin-top -(@height/2)
    .demo
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -3px -150px;
        width: 45px;
        height: 33px;
        position absolute
        left 0
        top 50%
        margin-top -(@height/2)
    .standart
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -55px -150px;
        width: 35px;
        height: 34px;
        position absolute
        left 0
        top 50%
        margin-top -(@height/2)
  .notify
    light()
    color #fff
    text-align center


